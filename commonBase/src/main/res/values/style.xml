<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Component Theme  -->
    <style name="Theme.OMR.TagChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/selector_tag_chip_text</item>
        <item name="android:textSize">14dp</item>
        <item name="chipBackgroundColor">@color/selector_tag_chip_bg</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Theme.OMR.SubChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/Theme.OMR.Chip.Text</item>
        <item name="android:textColor">@color/selector_sub_chip_text</item>
        <item name="android:textSize">14dp</item>
        <item name="chipStrokeColor">@color/selector_sub_chip_stroke</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Theme.OMR.Chip.Text" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#666673</item>
    </style>

    <!-- Dialog -->
    <style name="BottomSlideDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/VerticalSlideAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="VerticalSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogFullScreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogCornerRadius">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>