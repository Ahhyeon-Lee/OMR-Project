<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Component Theme  -->
    <style name="Theme.OMR.TagChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/selector_tag_chip_text</item>
        <item name="android:textSize">14dp</item>
        <item name="chipBackgroundColor">@color/selector_tag_chip_bg</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Theme.OMR.SubChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/selector_sub_chip_text</item>
        <item name="chipStrokeColor">@color/selector_sub_chip_stroke</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Theme.OMR.EditTagChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/selector_tag_chip_text</item>
        <item name="android:textSize">14dp</item>
        <item name="chipBackgroundColor">@color/selector_edit_tag_chip_bg</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Theme.OMR.FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:background">@drawable/bg_floating_button</item>
        <item name="backgroundTint">@color/theme_blue_primary</item>
        <item name="rippleColor">@color/theme_blue_1_m</item>
        <item name="borderWidth">0dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:src">@drawable/ic_baseline_add_24</item>
        <item name="fabCustomSize">50dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.OMR.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_menu_sort</item>
    </style>

    <!-- Dialog -->
    <style name="BottomSlideDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/VerticalSlideAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="VerticalSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogFullScreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogCornerRadius">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>