<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/numScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/theme_black_7"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:background="@color/theme_navy_2"
            android:paddingVertical="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="77"/>

        <EditText
            android:id="@+id/editScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:maxLength="3"
            android:inputType="numberDecimal"
            android:background="@null"
            android:visibility="visible"
            android:layout_marginVertical="4dp"
            android:hint="0"
            android:textColorHint="@color/theme_black_4"
            app:layout_constraintTop_toBottomOf="@id/numScore"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="2.5"/>

        <TextView
            android:id="@+id/showScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/theme_black_4"
            android:textSize="19dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="24dp"
            android:maxLength="3"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/numScore"
            tools:text="2.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>